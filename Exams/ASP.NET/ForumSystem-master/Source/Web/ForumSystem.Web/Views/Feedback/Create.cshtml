@model ForumSystem.Web.InputModels.Feedback.FeedbackInputModel
@{
    ViewBag.Title = "Send Feedback";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("Create", "Feedback", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Title, new { placeholder = "Title123" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Content, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Content, new { @class = "col-md-1 control-label" })
        </div>
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Send Feedback" class="btn btn-primary btn-lg" />
    </div>
}


